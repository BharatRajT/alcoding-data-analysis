{
    "extends": [
        "google",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
       "ecmaVersion": 6,
       "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "comma-dangle": ["error", "never"],
        "require-jsdoc": ["error", {
            "require": {
                "FunctionDeclaration": false,
                "MethodDefinition": false,
                "ClassDeclaration": false,
                "ArrowFunctionExpression": false,
                "FunctionExpression": false
            }
        }],
        "max-len": 0,
        "react/prop-types": 0
    }
}